<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usrgam.ejemplo.FragmentActivity">

    <Button
        android:id="@+id/boton_tab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="8dp"
        android:text="Tab1"
        app:layout_constraintBottom_toBottomOf="@+id/boton_tab2"
        app:layout_constraintEnd_toStartOf="@+id/boton_tab2"
        app:layout_constraintTop_toTopOf="@+id/boton_tab2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/boton_tab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:text="Tab2"
        app:layout_constraintBottom_toTopOf="@+id/rl_fragmento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/boton_tab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:text="Tab3"
        app:layout_constraintBottom_toBottomOf="@+id/boton_tab2"
        app:layout_constraintStart_toEndOf="@+id/boton_tab2"
        app:layout_constraintTop_toTopOf="@+id/boton_tab2"
        app:layout_constraintVertical_bias="1.0" />

    <RelativeLayout
        android:id="@+id/rl_fragmento"
        android:layout_width="326dp"
        android:layout_height="288dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/boton_tab2"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/boton_tab2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961">

    </RelativeLayout>

    <Button
        android:id="@+id/boton_destruir_fragmento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Destruir"
        app:layout_constraintEnd_toEndOf="@+id/boton_tab2"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="@+id/boton_tab2"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
